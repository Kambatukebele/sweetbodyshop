<section class="faq">
  <div class="faq__wrapper">
    <div class="container">
      <!-- FAQ Section -->
      <div class="faq-section">
        <p class="faq-header">
          {{ section.settings.faq_sub_heading }}
        </p>
        <h1 class="faq-title">
          {{ section.settings.faq_heading }}
        </h1>

        {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'question_response' -%}
                <div class="faq-item {% if forloop.index == 1 %} active {% endif %}">
                  <div class="faq-question">
                    {{ block.settings.question }}
                    <div class="faq-icon">+</div>
                  </div>
                  <div class="faq-answer">
                    {{ block.settings.answer }}
                  </div>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        {%- else -%}
          {%- for item in (1..5) -%}
            <div class="faq-item">
              <div class="faq-question {% if forloop.index == 1 %} active {% endif %}">
                How to edit Mixlix themes ?
                <div class="faq-icon">+</div>
              </div>
              <div class="faq-answer">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et
                dolore magna aliqua.
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .faq {
    width: 100%;
    height: fit-content;
    background-color: {{ section.settings.faq_background_color }};
  }
  .faq__wrapper {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 36px 20px;
    gap: 40px;
    align-items: center;
  }

  .faq-section {
    flex: 1 1 500px;
  }

  .faq-header {
    color: {{ section.settings.faq_sub_heading_color }};
    font-weight: 600;
    font-size: 14px;
    text-align: center;
  }

  .faq-title {
    font-size: 24px;
    font-weight: 700;
    margin: 10px 0 30px;
    line-height: 1.2;
    text-align: center;
    color: {{ section.settings.faq_heading }}
  }

  .faq-title span {
    color: #8cc63f;
  }

  .faq-item {
    background-color: {{ section.settings.question_response_background_color }};
    margin-bottom: 20px;
    border-radius: 16px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    transition: all 0.3s ease;

  }

  .faq-question {
    padding: 20px 14px;
    font-weight: 600;
    font-size: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    color: {{ section.settings.question_text_color }}
  }

  .faq-answer {
    padding: 0 24px 20px;
    color: #555;
    font-size: 15px;
    display: none;
    color: {{ section.settings.response_text_color }}
  }

  .faq-item.active .faq-answer {
    display: block;
  }

  .faq-icon {
    background: {{ section.settings.icon_background_color }};
    border-radius: 50%;
    color: white;
    font-weight: bold;
    width: 28px;
    height: 28px;
    text-align: center;
    line-height: 28px;
    font-size: 18px;
    transition: transform 0.3s ease;
  }

  .faq-item.active .faq-icon {
    transform: rotate(45deg);
  }

  .product-image {
    flex: 1 1 400px;
    text-align: center;
  }

  .product-image img {
    max-width: 100%;
    height: auto;
    border-radius: 16px;
  }

  @media (min-width: 768px) {
    .container {
      flex-direction: column;
      padding: 40px 20px;
    }

    .faq-title {
      font-size: 32px;
    }
  }
  @media (min-width: 990px) {
    .faq-title {
      font-size: 36px;
    }
    .faq-item {
      width: 800px

    }
  }
</style>

<script>
  // FAQ toggle script
  const questions = document.querySelectorAll('.faq-question');
  questions.forEach((question, index) => {
    question.addEventListener('click', () => {
      const faqItem = question.parentElement;
      faqItem.classList.toggle('active');

      const icon = faqItem.querySelector('.faq-icon');
      icon.textContent = faqItem.classList.contains('active') ? 'âˆ’' : '+';
    });
  });
</script>

