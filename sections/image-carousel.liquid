      "label": "Select Product",
      "limit": 8
    },
    {
      "type": "header",
      "content": "Heading, body and button color"
    },
    {
      "type": "color",
      "id": "image_carousel_heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "image_carousel_heading_transform",
      "label": "Heading text transform",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "Uppercase",
          "value": "uppercase"
        },
        {
          "label": "Lowercase",
          "value": "lowercase"
        },
        {
          "label": "Capitalize",
          "value": "capitalize"
        }
      ],
      "default": "none"
    },
    {
      "type": "color",
      "id": "image_carousel_body_color",
      "label": "Body color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "image_carousel_bg_color",
      "label": "Background button_color",
      "default": "#5C1A1B"
    },
    {
      "type": "color",
      "id": "image_carousel_text_color",
      "label": "Text button_color",
      "default": "#fff"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Image carousel",
      "settings": {
        "image_carousel_paddingY": 36
      },
      "blocks": []
    }
  ]
}
{% endschema %}
