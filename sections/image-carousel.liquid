      "type": "range",
      "id": "image_carousel_paddingY",
      "label": "Padding top to bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 36
    },
    {
      "type": "header",
      "content": "Product List",
      "info": "Product list"
    },
    {
      "type": "product_list",
