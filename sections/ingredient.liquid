<style>
  .ingredients-section {
    width: 100%;
    height: fit-content;
  }

  .ingredients-section__container {
  }

  .ingredients-section__wrapper {
    display: flex;
    flex-direction: column;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ingredients-section__left-column {
    flex: 1;
  }

  .ingredients-section__right-column {
    flex: 1;
    text-align: center;
    max-width: 100%;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
  }
  .ingredients-section__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ingredients-section__subtitle {
    color: #75d728;
    font-weight: bold;
    font-size: 12px;
    text-transform: uppercase;
    display: inline-block;
    margin-bottom: 10px;
  }

  .ingredients-section__title {
    font-size: 24px;
    font-weight: 800;
    margin-bottom: 10px;
  }

  .ingredients-section__description {
    font-size: 16px;
    color: #666;
    margin-bottom: 30px;
  }

  /* Features */
  .ingredients-section__feature {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #f9f9f9;
    padding: 15px 20px;
    margin-bottom: 15px;
    border-radius: 12px;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
  }

  .ingredients-section__feature-text h3 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 6px;
  }
  .ingredients-section__feature-text p {
    color: #555;
    font-size: 16px;
  }

  .ingredients-section__feature-icon {
    background-color: #75d728;
    color: white;
    font-size: 1.4rem;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
  }

  /* Responsive */
  @media (min-width: 768px) {
    .ingredients-section__wrapper {
      flex-direction: row;
      align-items: center;
    }
    .ingredients-section__left-column {
      padding-right: 40px;
    }
    .ingredients-section__subtitle {
      font-size: 14px;
    }

    .ingredients-section__title {
      font-size: 42px;
    }
  }
</style>

