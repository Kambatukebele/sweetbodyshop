<section class="reviews-section">
  <div class="reviews-container">
    <h2>Ce que disent-ils de nous?</h2>
    <div class="reviews-grid">
      <!-- Review Item -->
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'review' -%}
              <div class="review">
                {%- if block.settings.review_img != blank -%}
                  {{- block.settings.review_img | image_url: width: 200 | image_tag: class: 'product-img' -}}
                {%- endif -%}
                <div class="review-content">
                  <h3 class="product-title">
                    {%- if block.settings.review_title != blank -%}
                      {{ block.settings.review_title }}
                    {%- else -%}
                      NATIOS Magtein, Magnesium L-threonate, 90 veganských kapslí
                    {%- endif -%}
                  </h3>
                  <div class="meta">
                    <div class="stars">
                      {%- if block.settings.review_svg != blank -%}
                        {{ block.settings.review_svg }}
                      {% else %}
                        ★★★★★
                      {%- endif -%}
                    </div>
                    <span class="author">
                      {%- if block.settings.review_author != blank -%}
                        {{ block.settings.review_author }}
                      {%- else -%}
                        John Doe
                      {%- endif -%}
                    </span>
                    <span class="date">
                      {%- if block.settings.review_date != blank -%}
                        {{ block.settings.review_date }}
                      {%- else -%}
                        24.5.2025
                      {%- endif -%}
                    </span>
                  </div>
                  <p class="comment">
                    {%- if block.settings.review_comment != blank -%}
                      {{ block.settings.review_comment }}
                    {%- else -%}
                      No nejdříve zabíral na spánek v pohodě, ale poslední dobu se mi zdá, že mi odolává.
                    {%- endif -%}
                  </p>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      {%- else -%}
        {%- for item in (1..8) -%}
          <div class="review">
            {{- 'product-6' | placeholder_svg_tag: 'product-img' -}}
            <div class="review-content">
              <h3 class="product-title">NATIOS Magtein, Magnesium L-threonate, 90 veganských kapslí</h3>
              <div class="meta">
                <div class="stars">★★★★★</div>
                <span class="author">Jarmila Tylová</span>
                <span class="date">24.5.2025</span>
              </div>
              <p class="comment">No nejdříve zabíral na spánek v pohodě, ale poslední dobu se mi zdá, že mi odolává.</p>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  /* styles.css */

  .reviews-section {
    width: 100%;
    height: fit-content;
    background-color: {{ section.settings.review_bg_color }};
    padding-top: 36px;
    padding-bottom: 36px;
  }
  .reviews-container{
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .reviews-section h2 {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 1.5rem;
    font-family: {{ settings.type_header_font.family }};
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .review {
    display: flex;
    gap: 1rem;
  }

  .product-img {
    width: 50px;
    height: 80px;
    object-fit: contain;
  }

  .review-content {
    flex: 1;
  }

  .product-title {
    font-size: 16px;
    font-family: {{ settings.type_header_font.family }};
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .meta {
    font-size: 15px;
    color: #777;
    display: flex;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .stars {
    color: gold;
    font-size: 32px;
  }

  .comment {
    font-size: 15px;
    color: #333;
  }

  /* Responsive layout for desktop */
  @media (min-width: 768px) {
    .reviews-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem 3rem;
    }
  }
</style>

{% schema %}
{
  "name": "Reviews",
  "class": "reviews",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "review_bg_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "name": "Review",
      "type": "review",
      "limit": 8,
      "settings": [
        {
          "type": "image_picker",
          "id": "review_img",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "review_title",
          "label": "Review title",
          "default": "Review one"
        },
        {
          "type": "text",
          "id": "review_author",
          "label": "Review author",
          "default": "James"
        },
        {
          "type": "text",
          "id": "review_date",
          "label": "Review date",
          "default": "20.11.29",
          "info": "Enter date with comma or dot separator"
        },
        {
          "type": "text",
          "id": "review_comment",
          "label": "Review comment",
          "default": "Review comment"
        },
        {
          "type": "html",
          "id": "review_svg",
          "label": "SVG starts"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews",
      "settings": {
        "review_bg_color": "#ffffff"
      },
      "blocks": [
        {
          "name": "Review",
          "type": "review",
          "settings": {
            "review_img": "",
            "review_title": "NATIOS Magtein, Magnesium L-threonate, 90 veganských kapslí",
            "review_author": "Jarmila Tylová",
            "review_date": "24.5.2025",
            "review_comment": "Review comment"
          }
        }
      ]
    }
  ]
}
{% endschema %}
