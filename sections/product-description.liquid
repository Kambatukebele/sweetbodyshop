                <div class="product-description__item">
                  <div class="product-description__icon"></div>
                  <div class="product-description__info-{{ section.id }}">
                    <h4>Preserves Purity</h4>
                    <p>Ensures natural essence, free and from toxins, additives</p>
                  </div>
                </div>
              {%- endfor -%}
            {%- endif -%}
          </div>

          <div class="product-description__image-block">
            {%- if section.settings.product_description_image != blank -%}
              {{-
                section.settings.product_description_image
                | image_url: width: 700
                | image_tag: class: 'product-description__image'
              -}}
            {%- else -%}
              {{ 'product-6' | placeholder_svg_tag: 'product-description__image' }}
            {%- endif -%}
          </div>

          <div class="product-description__text-list product-description__right">
            {%- if section.blocks.size > 0 %}
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'product_description_right' -%}
                    <div class="product-description__item">
                      <div class="product-description__icon"></div>
                      <div class="product-description__info-{{ section.id }}">
                        <h4>
                          {{ block.settings.product_description_title_right }}
                        </h4>
                        <p>{{ block.settings.product_description_desc_right }}</p>
                      </div>
                    </div>
                {%- endcase -%}
              {% endfor %}
            {%- else -%}
              {%- for item in (1..3) -%}
                <div class="product-description__item">
                  <div class="product-description__icon"></div>
                  <div class="product-description__info-{{ section.id }}">
                    <h4>Preserves Purity</h4>
                    <p>Ensures natural essence, free and from toxins, additives</p>
                  </div>
                </div>
              {%- endfor -%}
            {%- endif -%}
          </div>
        </div>

        <div class="oil-feature__footer-{{section.id }}">
          <p>Let's make something great work together. <a href="#">Get Free Quote</a></p>
        </div>
      </div>
    {%- endif -%}
