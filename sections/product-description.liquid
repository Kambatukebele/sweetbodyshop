                      <div class="product-description__info-{{ section.id }}">
                        <h4>
                          {{ block.settings.product_description_title_left }}
                        </h4>
                        <p>{{ block.settings.product_description_desc_left }}</p>
                      </div>
                    </div>
                {%- endcase -%}
              {% endfor %}
            {%- else -%}
