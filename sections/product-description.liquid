<section class="product-description-{{ section.id }}">
  <div class="product-description__container">
    {%- if section.blocks.size > 0 -%}
      <div class="product-description__wrapper">
        {%- for block in section.blocks -%}
          <div class="product-description__header">
            {%- case block.type -%}
              {%- when 'intro' -%}
                <p class="product-description__intro-{{ section.id }}">
                  {{ block.settings.product_description_intro }}
                </p>
              {%- when 'heading' -%}
                <h2 class="product-description__title-{{ section.id }}">
                  {{ block.settings.product_description_title }}
                  <span>{{ block.settings.product_description_title_two }}</span>
                </h2>
              {%- when 'description' -%}
                <p class="product-description__desc-{{ section.id }}">
                  {{ block.settings.product_description_body_description }}
                </p>
            {%- endcase -%}
          </div>
        {%- endfor -%}

        <div class="product-description__content">
          <div class="product-description__text-list">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'product_description_left' -%}
                  <div class="product-description__item">
                    <div class="product-description__icon"></div>
                    <div class="product-description__info-{{ section.id }}">
                      <h4>
                        {{ block.settings.product_description_title_left_one }}
                      </h4>
                      <p>{{ block.settings.product_description_desc_left_one }}</p>
                    </div>
                  </div>
                  <div class="product-description__item">
                    <div class="product-description__icon"></div>
                    <div class="product-description__info-{{ section.id }}">
                      <h4>
                        {{ block.settings.product_description_title_left_two }}
                      </h4>
                      <p>{{ block.settings.product_description_desc_left_two }}</p>
                    </div>
                  </div>
                  <div class="product-description__item">
                    <div class="product-description__icon"></div>
                    <div class="product-description__info-{{ section.id }}">
                      <h4>
                        {{ block.settings.product_description_title_left_two }}
                      </h4>
                      <p>{{ block.settings.product_description_desc_left_two }}</p>
                    </div>
                  </div>
              {%- endcase -%}
            {% endfor %}
          </div>

          <div class="product-description__image-block">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'image' -%}
                  {%- if block.settings.product_description_image != blank -%}
                    {{-
                      block.settings.product_description_image
                      | image_url: width: 700
                      | image_tag: class: 'product-description__image'
                    -}}
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>

          <div class="product-description__text-list product-description__right">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'product_description_right' -%}
                  <div class="product-description__item">
                    <div class="product-description__icon"></div>
                    <div class="product-description__info-{{ section.id }}">
                      <h4>
                        {{ block.settings.product_description_title_right_one }}
                      </h4>
                      <p>{{ block.settings.product_description_desc_right_one }}</p>
                    </div>
                  </div>
                  <div class="product-description__item">
                    <div class="product-description__icon"></div>
                    <div class="product-description__info-{{ section.id }}">
                      <h4>
                        {{ block.settings.product_description_title_right_two }}
                      </h4>
                      <p>{{ block.settings.product_description_desc_right_two }}</p>
                    </div>
                  </div>
                  <div class="product-description__item">
                    <div class="product-description__icon"></div>
                    <div class="product-description__info-{{ section.id }}">
                      <h4>
                        {{ block.settings.product_description_title_right_three }}
                      </h4>
                      <p>{{ block.settings.product_description_desc_right_three }}</p>
                    </div>
                  </div>
              {%- endcase -%}
            {% endfor %}
          </div>
        </div>
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'footer' -%}
              <div class="oil-feature__footer-{{section.id }}">
                <p>
                  {{ block.settings.product_description_footer_textOne }}.
                  <a href="{{ block.settings.product_description_footer_link }}">
                    {{- block.settings.product_description_footer_textTwo -}}
                  </a>
                </p>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>

    {%- else -%}
      <div class="product-description__wrapper">
        <div class="product-description__header">
          <p class="product-description__intro-{{ section.id }}">Our Key Points</p>
          <h2 class="product-description__title-{{ section.id }}">
            Superior design, precision
            <span>drop lasting quality</span>
