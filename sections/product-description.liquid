</section>

<style>
   .product-description-{{ section.id }} {
     width: 100%;
     height: fit-content;
     background-color: {{- section.settings.product_description_background_color -}};
   }

   .product-description__container {
     max-width: var(--page-width);
     margin: 0 auto;
     padding: 0 1.5rem;
   }
   .product-description__wrapper {
     text-align: center;
     padding-top: {{ section.settings.product_description_paddingY }}px;
     padding-bottom: {{ section.settings.product_description_paddingY }}px;
   }

   .product-description__intro-{{ section.id }} {
     font-style: italic;
     color: {{ section.settings.product_description_info_color }};
     font-weight: 500;
     font-size: 14px;
   }

   .product-description__title-{{ section.id }} {
     font-size: 24px;
     font-family: {{ settings.type_header_font.family }};
     font-weight: 700;
     color: {{ section.settings.product_description_heading_color_one }};
     margin-top: 0.5rem;
   }

   .product-description__title-{{ section.id }} span {
     display: block;
     font-style: italic;
     font-weight: 400;
     color: {{ section.settings.product_description_heading_color_two }}
     margin-top: 0.25rem;
   }

   .product-description__desc-{{ section.id }} {
     max-width: 720px;
     margin: 1rem auto 2rem;
     font-family: {{ settings.type_body_font.family }};
     font-size: 16px;
     color: {{ section.settings.product_description_color }};
   }

   .product-description__content {
     display: flex;
     flex-wrap: wrap;
     flex-direction: column;
     justify-content: center;
     gap: 2rem;
     align-items: center;
   }

   .product-description__text-list {
     flex: 1;
     min-width: 250px;
   }

   .product-description__text-list.product-description__right {
     text-align: left;
   }

   .product-description__item {
     display: flex;
     align-items: flex-start;
     margin-bottom: 1.5rem;
     text-align: left;
   }

    .product-description__icon {
     width: 40px;
     height: 40px;
     background-color: #d9a441;
     border-radius: 50%;
   }

   .product-description__info-{{ section.id }} h4 {
    text-align: center;
     font-size: 16px;
     font-family: {{ settings.type_header_font.family }};
     font-weight: 600;
     margin: 0;
     color: {{ section.settings.product_description_heading_left_right_color }};
   }

   .product-description__info-{{ section.id }} p {
    text-align: center;
     font-size: 14px;
     font-family: {{ settings.type_body_font.family }};
     font-weight: 400;
     color: #777;
     color: {{ section.settings.product_description_body_left_right_color }};
   }

   .product-description__image-block {
     flex: 1;
     text-align: center;
     width: 200px;
   }
   .product-description__image{
     width: 100%;
     height: 100%;
     object-fit: cover;

   }

   {% comment %} .oil-feature__image {
     max-width: 100%;
     height: auto;
   } {% endcomment %}

    .oil-feature__footer-{{section.id }} {
     margin-top: 3rem;
     font-size: 16px;
   }
   .oil-feature__footer-{{section.id }} p {
     color: {{ section.settings.product_description_footer_text_color }} !important;
   }

  .oil-feature__footer-{{section.id }} p a {
     text-decoration: underline;
     color: {{ section.settings.product_description_footer_link_color }}
   }

   @media screen and (min-width: 750px) {
      .product-description__content {
        flex-direction: row;
      }
      .product-description__title-{{ section.id }} {
        font-size: 32px;
      }

      .product-description__item {
       justify-content: center;
       text-align: center;
       flex-direction: column;
      }

      .product-description__icon {
       margin: 0 auto 0.5rem;
      }
      .product-description__image-block {
       max-width: 300px;
      }
   }
   @media screen and (min-width: 990px) {
     .product-description__image-block {
       max-width: 400px;
     }
   }
   @media screen and (min-width: 1200px) {
      .product-description__title-{{ section.id }} {
        font-size: 36px;
      }
   }
</style>

